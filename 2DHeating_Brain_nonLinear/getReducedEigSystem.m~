function [Ahat, bhat, chat] = getReducedEigSystem(A,b,c,q,type_trunc)
    % Get the eigen properties of the system
    [V,D] = eig(full(A));
    
    if type_trunc == 0
        btild = V'*b;
        ctild = V'*c;
        checker = btild.*ctild;
        [out,idx] = sort(abs(checker),'ascend');
        Vq = V(:,idx(1:q));
    end
    
    
    
    checker = btild.*ctild./diag(D);
    [out,idx] = sort(abs(checker),'descend');
    Vq = V(:,idx(1:q)); %pick smallest residues
    
    % Select the q slowest nodes
%     Vq = V(:,end-q+1:end);
%     size(Vq);
    
    % Adjust the system
    chat = Vq'*c;
    bhat = Vq'*b;
    Ahat = Vq'*A*Vq;

end